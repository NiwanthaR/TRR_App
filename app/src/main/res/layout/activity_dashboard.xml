<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.Dashboard">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/display_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/top_bar_colour"
        android:backgroundTintMode="screen"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:strokeColor="@color/semiTransparentColor"
                app:cardBackgroundColor="@color/semiTransparentColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                             <LinearLayout
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_centerInParent="true"
                                 android:orientation="vertical">

                                 <TextView
                                     android:id="@+id/value01Title"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:textColor="@color/white"
                                     android:fontFamily="@font/gentiumplus_bold"
                                     android:text="ABC-EF" />

                                 <TextView
                                     android:id="@+id/value01"
                                     android:layout_gravity="center_horizontal"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:fontFamily="@font/gentiumplus_bold"
                                     android:textColor="@color/white"
                                     android:textSize="20dp"
                                     android:text="06"/>
                             </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:id="@+id/layoutDivide1"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="1dp"
                                android:layout_alignParentStart="true"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:background="@color/ash"/>

                            <LinearLayout
                                android:id="@+id/dataSquire02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/value02Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gentiumplus_bold"
                                    android:text="ABC-EF"
                                    android:textColor="@color/white"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/value02"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/gentiumplus_bold"
                                    android:textColor="@color/white"
                                    android:text="02"
                                    android:textSize="20dp" />
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/value03Title"
                                    android:layout_width="wrap_content"
                                    android:textSize="15dp"
                                    android:fontFamily="@font/gentiumplus_bold"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="ABC-EF" />

                                <TextView
                                    android:id="@+id/value03"
                                    android:fontFamily="@font/gentiumplus_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center_horizontal"
                                    android:text="10"/>
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/layoutDivide"
        android:layout_below="@id/display_card"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/ash"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutDivide"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/light_blue"
                app:strokeColor="@color/light_blue"
                android:layout_height="80dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/reserve_symbol"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/reservation_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/reserve_symbol"
                        android:text="ABCDEFGH"
                        android:layout_marginStart="25dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/light_purple"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/task_symbol02"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/reservation_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/task_symbol02"
                        android:text="ABCDEFGH"
                        android:layout_marginStart="25dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/light_orange"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/task_symbol03"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/reservation_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/task_symbol03"
                        android:text="ABCDEFGH"
                        android:layout_marginStart="25dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/light_green"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/task_symbol04"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/reservation_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/task_symbol04"
                        android:text="ABCDEFGH"
                        android:layout_marginStart="25dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/ash"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/task_symbol05"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/reservation_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/task_symbol05"
                        android:text="ABCDEFGH"
                        android:layout_marginStart="25dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>