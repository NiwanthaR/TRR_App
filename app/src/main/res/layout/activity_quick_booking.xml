                        android:src="@drawable/navigate_right_arrow" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rm06Card"
                android:layout_width="match_parent"
