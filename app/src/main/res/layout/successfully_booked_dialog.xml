<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        app:cardBackgroundColor="#ffffffff"
        app:strokeColor="#ffffffff"
        app:cardCornerRadius="20sp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/messageSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/success_lottie"
                android:layout_marginBottom="-50dp"
                android:text="Booking Successfully..!"
                android:fontFamily="@font/merriweather_regular"
                android:textSize="20dp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/success_lottie"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="60dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/success_done" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSuccessOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/success_lottie"
                android:layout_marginTop="-30dp"
                android:background="@color/app_yellow_light"
                app:backgroundTint="@color/app_yellow_light"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:text="OK"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>